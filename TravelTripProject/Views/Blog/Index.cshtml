@model TravelTripProject.Models.Classes.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TripLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="text/javascript" src="~/web2/js/easing.js"></script>
</head>
<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var item in Model.Blog)
                {
                    <div class="single-grid">

                        <img src="@item.BlogImage" alt="blog-Image" />
                        <br />
                        <a href="/Blog/BlogDetay/@item.BlogId" style="text-decoration:none;"><b>@item.Baslik</b></a>
                        <p style="color:black">@item.BlogOzet</p>
                    </div>
                    <hr />
                }
            </div>
            <div class="col-md-4 side-content">
                <div class="recent" style="text-decoration:none;">
                    <h3>Son Bloglar</h3>
                    <ul>
                        @foreach(var item in Model.Blog2)
                        {
                            <li><a href="/Blog/BlogDetay/@item.BlogId" style="text-decoration:none;">@item.Baslik</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    <ul>
                        @foreach(var item in Model.Yorum)
                        {
                            <li><a href="#" style="text-decoration:none;">@item.Yorumlar.Substring(0,20) ...</a></li>
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>

