@model List<TravelTripProject.Models.Classes.Blog>
<div class="con-bot">
    @foreach(var item in Model) {
    <div class="left"> 
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:265px; height:175px;"/>
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToShortDateString()</span>
            <p>@item.BlogOzet.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetay/@item.BlogId"><span class="read">Devamını Oku...</span></a></p>
        </div>
    </div>
    }
    @Html.Action("RightPartial","Default")
    <div class="clear"></div>
</div>

