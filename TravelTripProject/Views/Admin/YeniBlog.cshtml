@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
@using(Html.BeginForm("YeniBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">
        @Html.Label("Blog Başlık")
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Yazım Tarihi")
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Özet Yazısı")
        @Html.TextAreaFor(x => x.BlogOzet, 3, 5, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Yazısı")
        @Html.TextAreaFor(x => x.Aciklama, 15, 5, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x=>x.BlogImage)
        <input type="file" name="BlogImage" />
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </form>
}
